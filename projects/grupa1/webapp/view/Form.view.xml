<mvc:View
    controllerName="grupa1.controller.Form"
    xmlns="sap.m"
    xmlns:semantic="sap.f.semantic"
    xmlns:mvc="sap.ui.core.mvc">

<semantic:SemanticPage
        id="formPage"
        busy="{formView>/busy}"
        busyIndicatorDelay="{formView>/delay}">
        <semantic:titleHeading>
            <Title
                id="titlexd"
                text="Create Product"
                level="H2"/>
        </semantic:titleHeading>
        <semantic:content>

            <VBox
                id="vbox"
                leftMargin="50%">
            <HBox id="name">
            <Label
                id="prodname"
                text="Name: "/>
            <Input
                id="prname"/>
            </HBox>
            <HBox id="desc">
            <Label
                id="proddesc"
                text="Description: "/>
            <Input
                id="prdesc"/>
            </HBox>
            <HBox id="reldate">
            <Label
                id="prodreldate"
                text="Released Date: "/>
            <Input
                id="prreldate"
                type="date"/>
            </HBox>
            <HBox id="discdate">
            <Label
                id="proddiscdate"
                text="Discontinued Date: "/>
            <Input
                id="prdiscdate"
                type="date"/>
            </HBox>
            <HBox id="rating">
            <Label
                id="prodrating"
                text="Rating: "/>
            <Input
                id="prrating"/>
            </HBox>
            <HBox id="price">
            <Label
                id="prodprice"
                text="Price: "/>
            <Input
                id="prprice"/>
            </HBox>
            <HBox id="category">
            <Label
                id="prodcat"
                text="Category: "/>
            <Input
                id="prcat"/>
            </HBox>
            <HBox id="supplier">
            <Label
                id="prodsup"
                text="Supplier: "/>
            <Input
                id="prsup"/>
            </HBox>
    <HBox id="buttons">
    <Button
        id="saveproduct"
        press=".onSaveProductClick"
        text="Submit"
        type="Accept"/>
    <Button
        id="cancelproduct"
        press="history.back()"
        text="Cancel"
        type="Reject"/>
    </HBox>
    </VBox>
            
    </semantic:content>

    </semantic:SemanticPage>

    

</mvc:View>