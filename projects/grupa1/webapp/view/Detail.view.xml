<mvc:View
    controllerName="grupa1.controller.Detail"
    xmlns="sap.m"
    xmlns:semantic="sap.f.semantic"
    xmlns:mvc="sap.ui.core.mvc">

    <semantic:SemanticPage
        id="detailPage"
        busy="{detailView>/busy}"
        busyIndicatorDelay="{detailView>/delay}">
        <semantic:titleHeading>
            <Title
                id="tid"
                text="{Name}"
                level="H2"/>
        </semantic:titleHeading>
        <semantic:headerContent>
            <ObjectAttribute id="cid" title="Category ID"/>
            <ObjectNumber
                id="idid"
                number="{
                    path: 'ID',
                    formatter: '.formatter.numberUnit'
                }" />
        </semantic:headerContent>
        <semantic:content>

            <Table
                id="lineItemsList"
                width="auto"
                items="{Products}"
                updateFinished=".onListUpdateFinished"
                noDataText="{i18n>detailLineItemTableNoDataText}"
                busyIndicatorDelay="{detailView>/lineItemTableDelay}">
                <headerToolbar>
                    <Toolbar id="tbar">
                        <Title
                            id="lineItemsTitle"
                            text="{detailView>/lineItemListTitle}"
                            titleStyle="H3"
                            level="H3"/>
                    <!-- <Button
                        id="updateId"
                        press=".onUpdateClick"
                        text="Update Category"
                        type="Emphasized"
                        active="true"/> -->
                    <!-- <Button
                        id="deleteonlyCategoryButton"
                        press=".onCategoryDeleteonlyClick"
                        text="Delete Only Category"
                        type="Reject"/>
                    <Button
                        id="deleteCategoryItemsButton"
                        press=".onCategoryDeletemultiClick"
                        text="Delete Category with Items"
                        type="Reject"/> -->
                    <Button
                        id="AddProductButton"
                        press=".onAddProductClick"
                        text="Add Product"
                        type="Accept"/>
                    </Toolbar>
                
                </headerToolbar>
                <columns>
                    <Column id="c1">
                        <Text id="t1" text="{i18n>detailLineItemTableIDColumn}"/>
                    </Column>
                    <Column id="c2">
                        <Text id="t2" text="Description"/>
                    </Column>
                    <Column
                        id="c3"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End">
                        <Text id="t3" text="{i18n>detailLineItemTableUnitNumberColumn}"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="cli" press=".handleRowPress" type="Active">
                        <cells>
                            <ObjectIdentifier
                                id="oiid"
                                title="{Name}"
                                text="{ID}"/>

                            <Text id="t4" text="{Description}"></Text>

                            <ObjectNumber
                                id="priceid"
                                number="{
                                    path: 'Price',
                                    formatter: '.formatter.currencyValue'
                                }" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content>
        <!--Semantic ShareMenu Buttons-->

        <semantic:fullScreenAction>
            <semantic:FullScreenAction
                    id="enterFullScreen"
                    visible="{= !${device>/system/phone} &amp;&amp; !${appView>/actionButtonsInfo/midColumn/fullScreen}}"
                    press=".toggleFullScreen"/>
        </semantic:fullScreenAction>
        <semantic:exitFullScreenAction>
            <semantic:ExitFullScreenAction
                    id="exitFullScreen"
                    visible="{= !${device>/system/phone} &amp;&amp; ${appView>/actionButtonsInfo/midColumn/fullScreen}}"
                    press=".toggleFullScreen"/>
        </semantic:exitFullScreenAction>

    </semantic:SemanticPage>

</mvc:View>