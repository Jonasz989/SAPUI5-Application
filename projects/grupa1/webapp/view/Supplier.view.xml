<mvc:View xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.uxap" 
    xmlns:layout="sap.ui.layout" 
    xmlns:m="sap.m" 
    xmlns:forms="sap.ui.layout.form" controllerName="grupa1.controller.Supplier" height="100%">

    <m:Page
		title="Back"
		showNavButton="true"
		navButtonPress=".onNavBack">
	
    <ObjectPageLayout id="ObjectPageLayout" upperCaseAnchorBar="false"> 
    <headerTitle> 
    <ObjectPageHeader id="headerForTest" objectTitle="{Name}" objectSubtitle="ID: {ID} "/> 
    
    </headerTitle>

    
    <headerContent>

            <layout:VerticalLayout> 
                <m:Label text="Release Date"/>
                <m:Text text="{ReleaseDate}"/>  
            </layout:VerticalLayout> 
            <layout:VerticalLayout> 
                <m:Label text="Discontinued Date"/> 
                <m:Text text="{DiscontinuedDate}"/> 
            </layout:VerticalLayout> 
            <m:RatingIndicator maxValue="5" class="sapUiSmallMarginBottom" value="{Rating}" editable="false" tooltip="Rating Tooltip"/>
            <m:Text width="400px"
					text="{Description}"/>
            <m:Button
                    id="updateProductButton"
                    press=".onProductUpdateClick"
                    text="Update Product"
                    type="Emphasized"/>
            <m:Button
                    id="deleteProductButton"
                    press=".onProductDeleteClick"
                    text="Delete Product"
                    type="Reject"/>
        
    </headerContent> 
        <sections> 
        
            <ObjectPageSection titleUppercase="false" title="2014 Goals Plan"> 
                <subSections> 
                    <ObjectPageSubSection title="Supplier info" titleUppercase="false"> 
                    
                        <blocks> 
                            <forms:SimpleForm editable="false" layout="ColumnLayout"> 
                                <m:Label text="Name"/> 
                                <m:Text text="{Supplier/Name}"/> 
                                <m:Label text="Street"/> 
                                <m:Text text="{Supplier/Address/Street}"/> 
                                <m:Label text="State"/> 
                                <m:Text text="{Supplier/Address/State}"/>
                                <m:Label text="Zip Code"/> 
                                <m:Text text="{Supplier/Address/ZipCode}"/> 
                                <m:Label text="Country"/> 
                                <m:Text text="{Supplier/Address/Country}"/>  

                            </forms:SimpleForm> 
                        </blocks> 
                    </ObjectPageSubSection>
                     
                </subSections> 
            </ObjectPageSection> 
        </sections> 
    </ObjectPageLayout>
    </m:Page> 
</mvc:View> 