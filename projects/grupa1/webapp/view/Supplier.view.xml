<mvc:View xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.uxap" 
    xmlns:layout="sap.ui.layout" 
    xmlns:m="sap.m" 
    xmlns:forms="sap.ui.layout.form" controllerName="grupa1.controller.Supplier" height="100%"> 
    <ObjectPageLayout id="ObjectPageLayout" upperCaseAnchorBar="false"> 
    <headerTitle> 
    <ObjectPageHeader id="headerForTest" objectTitle="PRODUKT" objectSubtitle="ID: {ID} "/> 
    </headerTitle>

    
    <headerContent>

            <layout:VerticalLayout> 
                <m:Label text="Release Date"/>
                <m:Text text="DATA 1"/>  
            </layout:VerticalLayout> 
            <layout:VerticalLayout> 
                <m:Label text="Discontinued Date"/> 
                <m:Text text="DATA 2"/> 
            </layout:VerticalLayout> 
            <m:RatingIndicator maxValue="5" class="sapUiSmallMarginBottom" value="1" tooltip="Rating Tooltip"/>
            <m:Text width="400px"
					text="Hi, I'm Denise. I am passionate about what I do and I'll go the extra mile to make the customer win."/>


    </headerContent> 
        <sections> 
            <ObjectPageSection titleUppercase="false" title="2014 Goals Plan"> 
                <subSections> 
                    <ObjectPageSubSection title="Supplier info" titleUppercase="false"> 
                        <blocks> 
                            <forms:SimpleForm editable="false" layout="ColumnLayout"> 
                                <m:Label text="Name"/> 
                                <m:Text text="{Name}"/> 
                                <m:Label text="Street"/> 
                                <m:Text text="{Address/Street}"/> 
                                <m:Label text="State"/> 
                                <m:Text text="{Address/State}"/>
                                <m:Label text="Zip Code"/> 
                                <m:Text text="{Address/ZipCode}"/> 
                                <m:Label text="Country"/> 
                                <m:Text text="{Address/Country}"/>  
                            </forms:SimpleForm> 
                        </blocks> 
                    </ObjectPageSubSection> 
                </subSections> 
            </ObjectPageSection> 
        </sections> 
    </ObjectPageLayout> 
</mvc:View> 